<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageFirst"
        android:layout_width="93dp"
        android:layout_height="115dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_image_1"
        app:shapeAppearanceOverlay="@style/circularCorner"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSecond"
        android:layout_width="93dp"
        android:layout_height="115dp"
        app:layout_constraintStart_toEndOf="@id/imageFirst"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:src="@drawable/user_image_2"
        app:shapeAppearanceOverlay="@style/circularCorner"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageThird"
        android:layout_width="93dp"
        android:layout_height="115dp"
        app:layout_constraintStart_toEndOf="@id/imageSecond"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:src="@drawable/user_image_3"
        app:shapeAppearanceOverlay="@style/circularCorner"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageFourth"
        android:layout_width="93dp"
        android:layout_height="115dp"
        app:layout_constraintStart_toEndOf="@id/imageThird"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:src="@drawable/user_image_4"
        app:shapeAppearanceOverlay="@style/circularCorner"/>

</androidx.constraintlayout.widget.ConstraintLayout>